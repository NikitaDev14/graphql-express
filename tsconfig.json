{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": ".",
    "paths": {
      "graphql-express": ["./src/index"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "importHelpers": true,
    "strictBindCallApply": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
